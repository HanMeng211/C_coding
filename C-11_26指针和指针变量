//指针就是地址
#include<stdio.h>
int main()
{
	int a = 10;
	int b = 'a';
	static int c = 20;
	printf("%u\n", &a);   //打印地址
	printf("%u\n", &b);
	printf("%u\n", &c);
	return 0;
}








//指针变量就是存地址
#include<stdio.h>
int main()
{
	int a = 10;
	int *pa = &a;          //存地址
		printf("%u\n", sizeof(*pa));    //求指针的大小
	return 0;
}
