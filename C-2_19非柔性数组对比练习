#include<stdio.h>
#include<stdlib.h>
typedef struct S
{
	int i;
	int* arr;
}S;
int main()
{
	S* ps = (S*)malloc(sizeof(S));
	ps->arr = malloc(5 * sizeof(int));
	for (int i = 0; i < 5; i++)
	{
		ps->arr[i] = i;
	}
	//调整大小
	int* ptr = realloc(ps->arr, 40);
	if (ptr != NULL)
	{
		ps->arr = ptr;
		for (int i = 5; i < 10; i++)
		{
			ps->arr[i] = i;
		}
		for (int i = 0; i < 10; i++)
		{
			printf("%d ", ps->arr[i]);
		}
	}
	//释放内存
	free(ps->arr);
	ps->arr = NULL;
	free(ps);
	ps = NULL;
	return 0;
}
