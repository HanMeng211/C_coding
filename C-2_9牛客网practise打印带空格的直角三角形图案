#include<stdio.h>
int main()
{
    int num;
    while(scanf("%d",&num) != EOF)
    {
        //控制行数
        for(int i = 0;i < num;++i)
        {
            //控制每行的空格的数量
            for(int j = 0;j <num - i - 1;++j)
            {
                printf("  ");
            }
            //控制每行*的数量
            for(int a = 0;a < i + 1;++a)
            {
                printf("* ");
            }
            printf("\n");
        }
    }
    return 0;
}
