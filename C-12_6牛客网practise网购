#include<stdio.h>
int main()
{
	float a;
	int b, c, d;
	float buy;
	scanf("%f %d %d %d", &a, &b, &c, &d);
	if (b == 11 && c == 11 && d == 1)
	{
		buy = a * 0.7f - 50;
		if (buy < 0)
		{
			printf("0.00\n");
		}
		else
		{
			printf("%.2f\n", buy);
		}
	}
	else if (b == 11 && c == 11 && d == 0)
	{
		buy = a * 0.7f;
		if (buy < 0)
		{
			printf("0.00");
		}
		else
		{
			printf("%.2f\n", buy);
		}
	}
	else if (b == 12 && c == 12 && d == 1)
	{
		buy = a * 0.8f - 50;
		if (buy < 0)
		{
			printf("0.00");
		}
		else
		{
			printf("%.2f\n", buy);
		}
	}
	else if (b == 12 && c == 12 && d == 0)
	{
		buy = a * 0.8f;
		if (buy < 0)
		{
			printf("0.00");
		}
		else
		{
			printf("%.2f\n", buy);
		}
	}
	else
	{
		printf("%.2f\n", a);
	}
	return 0;
}
