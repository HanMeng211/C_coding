#include<stdio.h>
void test()
{
	int i = 0;  //这是一个局部变量
	++i;
	printf("%d\n", i);

}
int main()
{
	test();
	test();
	test();
	return 0;
}   //运行结果是三个1





#include<stdio.h>
void test()
{
	static int i = 0;    // 改变局部变量的生命周期（变成了整个程序）但不改变局部变量的作用域
	++i;
	printf("%d\n", i);

}
int main()
{
	test();
	test();
	test();
	return 0;
}   //运行结果是1  2   3
