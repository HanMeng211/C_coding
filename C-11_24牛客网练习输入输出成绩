#include<stdio.h>
int main()
{
	long a;
	float b, c, d;
	scanf_s("%ld;%f,%f,%f",&a,&b,&c,&d);            //此处;为英文分号,若打成中文分号运行结果b,c,d是乱码
	printf("The each subject score of  No. %ld is %.2f,%.2f,%.2f.\n",a,b,c,d);
	return 0;
}




练2
#include<stdio.h>
int main()
{
	long a;
	float b, c, d;
	printf("请输入学号\n");
	scanf_s("%ld;", &a);                   //此处;也是英文分号
	printf("请输入b的成绩\n");
	scanf_s("%f",&b);
	printf("请输入c的成绩\n");
	scanf_s("%f", &c);
	printf("请输入d的成绩\n");
	scanf_s("%f", &d);
	printf("The each subject score of  No. %ld is %.2f,%.2f,%.2f.\n",a,b,c,d);
	return 0;
}
