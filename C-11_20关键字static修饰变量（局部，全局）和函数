#include<stdio.h>
void test()
{
	int i = 0;  //这是一个局部变量
	++i;
	printf("%d\n", i);

}

int main()
{
	test();
	test();
	test();
	return 0;
}   //运行结果是三个1





#include<stdio.h>
void test()
{
	static int i = 0;     //static修饰局部变量，改变局部变量的生命周期——整个程序运行期间
	++i;
	printf("%d\n", i);

}

int main()
{
	test();
	test();
	test();
	return 0;
}   //运行结果是1  2   3
