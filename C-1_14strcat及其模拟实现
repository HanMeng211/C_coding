#include<stdio.h>
#include<string.h>
int main()
{
	char p1[20] = "hello";
	const char* p2 = " world";
	strcat(p1, p2);
	printf("%s\n",p1);
	return 0;
}







//strcat模拟实现
#include<stdio.h>
#include<string.h>
void MyStrcat(char* dst, const char * src)
{
	//让dst指向'\0'位置
	while (*dst != '\0')
	{
		++dst;
	}
	//让dst从'\0'开始，将src赋值给dst
	while (*dst = *src)
	{
		++dst;
		++src;
	}
	*dst = '\0';
}
int main()
{
	char p1[20] = "hello";
	const char* p2 = " world";
	MyStrcat(p1, p2);
	printf("%s\n",p1);
	return 0;
}
