#include<stdio.h>
#include<stdlib.h>
typedef struct S
{
	int i;
	int arr[0];//柔性数组成员
}S;
int main()
{
	S* ps = (S*)malloc(sizeof(S) + 5 * sizeof(int));
	int i = 100;
	for (int i = 0; i < 5; i++)
	{
		ps->arr[i] = i;
	}
	S* ptr = realloc(ps, 44);
	if (ptr != NULL)
	{
		ps = ptr;
		for (int i = 5; i < 10; i++)
		{
			ps->arr[i] = i;
		}
		for (int i = 0; i < 10; i++)
		{
			printf("%d ", ps->arr[i]);
		}
	}
	free(ps);
	ps = NULL;
	return 0;
}
